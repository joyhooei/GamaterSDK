<?xml version="1.0" encoding="utf-8"?>
<com.tony.sdkview.ChangePasswdView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="12dp"
    android:paddingTop="48dp" >
	<com.tony.view.BaseSdkBgLinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
    	android:orientation="vertical" 
    	android:paddingTop="28dp"
    	android:paddingBottom="28dp"
    	android:paddingLeft="12dp"
    	android:paddingRight="12dp">
	    <com.tony.view.WarningLinearLayout 
	        android:layout_width="match_parent"
		    android:layout_height="wrap_content"
	    	android:layout_marginLeft="16dp"
	    	android:layout_marginRight="16dp"
	    	android:layout_marginBottom="12dp"
		   	android:background="@drawable/vsgm_tony_white_border_bg_transparent"
		    android:orientation="horizontal">
		    <ImageView android:layout_width="36dp"
		        android:layout_height="36dp"
		        android:padding="5dp"
		        android:src="@drawable/vsgm_tony_icon_passwd"
		        android:background="#A0808080"/>
		    <EditText android:id="@+id/old_passwd_edit"
				android:layout_width="match_parent"
			 	android:layout_height="36dp"
			 	android:paddingLeft="12dp"
			 	android:textColor="@android:color/white"
			 	android:textColorHint="#909090"
			 	android:hint="@string/vsgm_tony_change_hin_in_oldpasswd"
			 	android:textSize="16dp"
			 	android:singleLine="true"
			 	android:inputType="textPassword"
			 	android:gravity="center_vertical"
			 	android:background="@android:color/transparent"
			 	android:imeOptions="flagNoExtractUi"/>
		</com.tony.view.WarningLinearLayout>
		<com.tony.view.WarningLinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
	    	android:layout_marginLeft="16dp"
	    	android:layout_marginRight="16dp"
	    	android:layout_marginBottom="12dp"
		   	android:background="@drawable/vsgm_tony_white_border_bg_transparent"
		    android:orientation="horizontal">
		    <ImageView android:layout_width="36dp"
		        android:layout_height="36dp"
		        android:padding="5dp"
		        android:src="@drawable/vsgm_tony_icon_passwd"
		        android:background="#A0808080"/>
		    <EditText android:id="@+id/new_passwd_edit"
				android:layout_width="match_parent"
			 	android:layout_height="36dp"
			 	android:paddingLeft="12dp"
			 	android:textColor="@android:color/white"
			 	android:textColorHint="#909090"
			 	android:hint="@string/vsgm_tony_change_hin_in_passwd"
			 	android:textSize="16dp"
			 	android:singleLine="true"
			 	android:inputType="textPassword"
			 	android:gravity="center_vertical"
			 	android:background="@android:color/transparent"
			 	android:imeOptions="flagNoExtractUi"/>
		</com.tony.view.WarningLinearLayout>
		<com.tony.view.WarningLinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
	    	android:layout_marginLeft="16dp"
	    	android:layout_marginRight="16dp"
	    	android:layout_marginBottom="12dp"
		   	android:background="@drawable/vsgm_tony_white_border_bg_transparent"
		    android:orientation="horizontal">
		    <ImageView android:layout_width="36dp"
		        android:layout_height="36dp"
		        android:padding="5dp"
		        android:src="@drawable/vsgm_tony_icon_passwd"
		        android:background="#A0808080"/>
		    <EditText android:id="@+id/commit_passwd_edit"
				android:layout_width="match_parent"
			 	android:layout_height="36dp"
			 	android:paddingLeft="12dp"
			 	android:textColor="@android:color/white"
			 	android:textColorHint="#909090"
			 	android:hint="@string/vsgm_tony_reg_hin_in_conf_password"
			 	android:textSize="16dp"
			 	android:singleLine="true"
			 	android:inputType="textPassword"
			 	android:gravity="center_vertical"
			 	android:background="@android:color/transparent"
			 	android:imeOptions="flagNoExtractUi"/>
		</com.tony.view.WarningLinearLayout>
	    <com.tony.view.SdkTipsTextView android:id="@+id/btnChangePw" 
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_marginLeft="16dp"
	    	android:layout_marginRight="16dp"
	    	android:padding="8dp"
	    	android:textSize="16dp"
	    	android:gravity="center"
	    	android:textColor="@android:color/white"
	    	android:text="@string/vsgm_tony_change_btn_chnage"
	    	android:background="@drawable/vsgm_tony_selector_orange_round" />
    </com.tony.view.BaseSdkBgLinearLayout>
</com.tony.sdkview.ChangePasswdView>