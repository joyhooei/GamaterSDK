<?xml version="1.0" encoding="utf-8"?>
<com.tony.sdkview.ThirdLoginView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingTop="20dp" >

    <com.tony.view.BaseSdkBgLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:text="@string/vsgm_play_with_friends"
            android:textColor="@android:color/white"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/btnThirdLogin1"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/vsgm_tony_btn_fb_selector" />

            <ImageView
                android:id="@+id/btnThirdLogin2"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/vsgm_tony_btn_google_selector" />

            <ImageView
                android:id="@+id/btnThirdLogin3"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/vsgm_tony_btn_camera_selector" />

            <ImageView
                android:id="@+id/btnThirdLogin4"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/vsgm_tony_btn_twitter_selector" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/btnThirdLogin5"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/vsgm_tony_btn_rc_selector" />

            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:visibility="invisible" />

            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:visibility="invisible" />

            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:visibility="invisible" />
        </LinearLayout>
    </com.tony.view.BaseSdkBgLinearLayout>

</com.tony.sdkview.ThirdLoginView>