<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone" >

            <EditText
                android:id="@+id/server_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="游戏服ID"
                android:inputType="number" />

            <EditText
                android:id="@+id/server_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="游戏服名" />

            <EditText
                android:id="@+id/role_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="游戏角色ID"
                android:inputType="number" />

            <EditText
                android:id="@+id/role_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="游戏角色名" />

            <EditText
                android:id="@+id/role_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="游戏角色等级"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnToLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Login" />

            <Button
                android:id="@+id/btnRoleReport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Role report"
                android:visibility="visible" />

            <Button
                android:id="@+id/btnDefaultPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Default Payment" />

            <Button
                android:id="@+id/btnShowFacebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="FaceBook" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>