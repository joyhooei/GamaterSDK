<?xml version="1.0" encoding="utf-8"?>
<com.tony.facebook.FbInviteView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/invite_reward_list"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="#d0131917"
        android:divider="@android:color/transparent"
        android:dividerHeight="4dp"
        android:listSelector="@android:color/transparent"
        android:paddingBottom="4dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="4dp"
        android:scrollbars="@null" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/vsgm_tony_facebook_bottom_bg" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="@string/vsgm_tony_share_tips"
            android:textColor="#2d4470"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/btn_facebook_invite_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:text="@string/vsgm_tony_activities_desc"
            android:textColor="@drawable/vsgm_tony_selector_common_textcolor"
            android:textSize="14dp" />
    </RelativeLayout>

</com.tony.facebook.FbInviteView>