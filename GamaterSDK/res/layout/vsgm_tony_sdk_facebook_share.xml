<?xml version="1.0" encoding="utf-8"?>
<com.tony.facebook.FbShareView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <ImageView android:id="@+id/image_share" 
        android:layout_width="320dp"
        android:layout_height="160dp"
        android:scaleType="fitXY"
        android:background="#d0131917"/>
    <RelativeLayout android:layout_width="match_parent"
	    android:layout_height="40dp"
	    android:background="@drawable/vsgm_tony_facebook_bottom_bg">
	    <TextView android:id="@+id/btn_facebook_share_share"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:paddingTop="4dp"
	        android:paddingBottom="4dp"
	        android:paddingLeft="16dp"
	        android:paddingRight="16dp"
	        android:layout_centerInParent="true"
	        android:textColor="@android:color/white"
	        android:textSize="14dp"
	        android:background="@drawable/com_facebook_button_background"
	        android:text="@string/vsgm_tony_share_now"/>
	    <TextView android:id="@+id/btn_facebook_share_desc"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="12dp"
	        android:textSize="14dp"
	        android:textColor="@drawable/vsgm_tony_selector_common_textcolor"
	        android:text="@string/vsgm_tony_activities_desc"/>
	</RelativeLayout>
</com.tony.facebook.FbShareView>
