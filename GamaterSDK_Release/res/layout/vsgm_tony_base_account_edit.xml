<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   	android:background="@drawable/vsgm_tony_white_border_bg_transparent"
  	android:layout_marginLeft="16dp"
  	android:layout_marginRight="16dp"
    android:orientation="horizontal">
    <ImageView android:layout_width="36dp"
    	android:layout_height="36dp"
        android:padding="5dp"
        android:src="@drawable/vsgm_tony_icon_account"
		android:background="#A0808080"/>
	<EditText android:id="@+id/editAccount" 
		android:layout_width="match_parent"
	   	android:layout_height="36dp"
	   	android:paddingLeft="12dp"
	   	android:textColor="@android:color/white"
	   	android:textColorHint="#909090"
	   	android:hint="账号"
	   	android:textSize="16dp"
	   	android:singleLine="true"
	   	android:inputType="textEmailAddress"
	   	android:gravity="center_vertical"
	   	android:background="@android:color/transparent"
	   	android:imeOptions="flagNoExtractUi"/>
</LinearLayout>
