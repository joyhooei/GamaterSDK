<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/vsgm_tony_color_white"
    android:orientation="vertical" >
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="25dp"
        android:text="@string/vsgm_tony_float_delete" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_hide_sdkmenu_commit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/vsgm_tony_btn_done" 
            android:background="@color/vsgm_tony_color_red"
            android:padding="8dp"
            android:gravity="center"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/btn_hide_sdkmenu_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/vsgm_tony_btn_cancel" 
            android:background="@android:color/darker_gray"
            android:padding="8dp"
            android:gravity="center"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>